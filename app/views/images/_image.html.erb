<div id="<%= dom_id image %>">
  <%= image_tag image.photo, :width => 200, :height => 200, class: "mb-4" %>
  <% if action_name != "show" %>
    <%= render(ButtonComponent.new(type: :white)) do %> 
        <%= link_to "Show this image", image %>
    <% end %> 

    <%= render(ButtonComponent.new(type: :white)) do %> 
      <%= link_to 'Edit this image', edit_image_path(image) %>
    <% end %> 
  <% end %>
</div>
