<div class="bg-blue mx-auto max-w-md text-white py-12 px-12">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mt-4">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Your email", class: "block mx-auto w-full text-black" %>
    </div>

    <div class="mt-4">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Your password", class: "block mx-auto w-full text-black" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mt-4">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>


      <%= render(ButtonComponent.new(type: :primary)) do %>
        <%= f.submit "Log in", class: "cursor-pointer" %>
      <% end %>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
